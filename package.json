{
  "name": "cannon-defense-phaser",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "author": "Ben",
  "description": "A Phaser game with Electron and Vite",
  "main": "electron/main.js",
  "scripts": {
    "start": "vite --mode web",
    "build": "vite build",
    "build:gh": "vite build --mode gh-pages",
    "preview": "vite preview --port 8080",
    "serve": "vite serve",
    "electron:dev": "concurrently -r 'vite --mode electron' 'NODE_ENV=development electron electron/main.js'",
    "electron:mac": "npm run build && electron-builder --mac --dir"
  },
  "dependencies": {
    "@swc-node/register": "^1.10.10",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.1",
    "body-parser": "^2.2.0",
    "concurrently": "^9.1.2",
    "d3-random": "^3.0.1",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "eslint": "^9.28.0",
    "eslint-plugin-react-hooks": "^6.0.0-rc.1",
    "eslint-plugin-react-refresh": "^0.4.20",
    "jiti": "^2.4.2",
    "lodash.debounce": "^4.0.8",
    "phaser": "^4.0.0-rc.4",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "serve": "^14.2.4",
    "tsx": "^4.19.4",
    "vite": "^6.3.5"
  },
  "devDependencies": {
    "@emnapi/core": "^1.4.3",
    "@types/d3-random": "^3.0.3",
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "^22.15.29",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "bbenezech.helm-defense",
    "productName": "Helm Defense",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "bbenezech",
        "repo": "helm-defense",
        "private": false,
        "releaseType": "prerelease"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
