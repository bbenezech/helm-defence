{
  "name": "cannon-defense-phaser",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "build:gh": "vite build --mode gh-pages",
    "preview": "vite preview --port 8080",
    "serve": "vite serve",
    "electron:dev": "npm run build && NODE_OPTIONS=\"--import tsx\" electron ./electron.ts"
  },
  "dependencies": {
    "@swc-node/register": "^1.10.10",
    "body-parser": "^2.2.0",
    "d3-random": "^3.0.1",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "lodash.debounce": "^4.0.8",
    "phaser": "^4.0.0-rc.4",
    "prettier": "^3.5.3",
    "serve": "^14.2.4",
    "tsx": "^4.19.4",
    "vite": "^6.3.5"
  },
  "devDependencies": {
    "@types/d3-random": "^3.0.3",
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "^22.15.29"
  },
  "build": {
    "appId": "bbenezech.helm-defense",
    "productName": "Helm Defense",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.ts",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "bbenezech",
        "repo": "helm-defense",
        "private": false,
        "releaseType": "prerelease"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
