{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true, // Allows importing JSON if needed later
    "lib": ["es6", "dom"] // Add DOM library
  },
  "include": ["src/**/*"]
}
